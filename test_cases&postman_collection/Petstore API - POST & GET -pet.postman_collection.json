{
	"info": {
		"_postman_id": "c09c73aa-58d7-4fb5-ac0f-f28f94d0031a",
		"name": "Petstore API - POST & GET /pet",
		"description": "Automated tests for POST /pet and GET /pet/{petId}",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "18139232"
	},
	"item": [
		{
			"name": "Create New Pet - POST /pet",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has correct name\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json.name).to.eql(\"Fluffy\");",
							"});",
							"",
							"// Store petId into environment variable",
							"if (pm.response.code === 200) {",
							"    const json = pm.response.json();",
							"    pm.environment.set(\"petId\", json.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id\": 999999,\n  \"name\": \"Fluffy\",\n  \"photoUrls\": [\"https://example.com/fluffy.jpg\"],\n  \"status\": \"available\"\n}"
				},
				"url": {
					"raw": "https://petstore.swagger.io/v2/pet",
					"protocol": "https",
					"host": [
						"petstore",
						"swagger",
						"io"
					],
					"path": [
						"v2",
						"pet"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Pet by ID - GET /pet/{petId}",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Returned pet has correct ID\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json.id).to.eql(parseInt(pm.environment.get(\"petId\")));",
							"});",
							"",
							"pm.test(\"Pet has name field\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.property(\"name\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "https://petstore.swagger.io/v2/pet/{{petId}}",
					"protocol": "https",
					"host": [
						"petstore",
						"swagger",
						"io"
					],
					"path": [
						"v2",
						"pet",
						"{{petId}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Negative Check - GET nonexistent pet",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 404 for nonexistent pet\", function () {",
							"    pm.response.to.have.status(404);",
							"});",
							"",
							"pm.test(\"Error message exists\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json.message || json.error).to.be.a(\"string\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "https://petstore.swagger.io/v2/pet/1234567890",
					"protocol": "https",
					"host": [
						"petstore",
						"swagger",
						"io"
					],
					"path": [
						"v2",
						"pet",
						"1234567890"
					]
				}
			},
			"response": []
		}
	]
}